@{
    ViewData["Title"] = "Your Crappy GPA";
}

@model CalcModel


<!--Takes the different catagories for the grades in a form so you can use them in JS-->
<h2>GPA Calc</h2>
<form  method="post">
    <label>Assignment Grade:</label>
    <input id="assignments" asp-for="Assignments" />
    <br />
    <label>Group Project Grade:</label>
    <input id="groupProject" asp-for="GroupProjects"/>
    <br />
    <label>Quizzes Grade:</label>
    <input id="quizzes" asp-for="Quizzes"/>
    <br />
    <label>Exams Grade:</label>
    <input id="exams" asp-for="Exams"/>
    <br />
    <label>Intex Grade:</label>
    <input id="intex" asp-for="Intex"/>
    <br />
    <input id="btnCheck" type="submit" value="Submit" />
    <div asp-validation-summary="All"></div>
</form>
<br />
<br />
<!--our gpa calulator program-->
<script src="js/gpaCalc.js"></script>